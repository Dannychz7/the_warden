{
  "mcpServers": {
    "abuseipdb-server": {
      "command": "python3",
      "args": ["./abuseIP_mcp_server.py"],
      "description": "IP reputation checking via AbuseIPDB API",
      "capabilities": ["tools"],
      "transport": "stdio"
    },
    "threatfox-server": {
      "command": "python3", 
      "args": ["./threatFox_mcp_server.py"],
      "description": "Threat intelligence from ThreatFox (abuse.ch)",
      "capabilities": ["tools"],
      "transport": "stdio"
    },
    "elastic-server": {
      "command": "python3", 
      "args": ["./elastic_mcp_server.py"],
      "description": "SIEM tool for querying Elasticsearch indices with IP/username search, document retrieval, and advanced DSL queries",
      "capabilities": ["tools"],
      "transport": "stdio"
    }       
  },
  "clientSettings": {
    "timeout": 60000,
    "retryAttempts": 3
  }
}